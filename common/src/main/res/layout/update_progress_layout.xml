<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/update_bg"
    android:gravity="center"
    android:minHeight="@dimen/dp_240"
    android:minWidth="@dimen/dp_260"
    android:orientation="vertical">


    <com.uiho.sgmw.common.widget.NumberProgressBar
        android:id="@+id/number_progress"
        android:layout_width="@dimen/dp_240"
        android:layout_height="@dimen/dp_150" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="@dimen/dp_30"
        android:text="新版本正在更新,请稍等"
        android:textColor="@color/color_bule"
        android:textSize="@dimen/sp_16" />


</LinearLayout>